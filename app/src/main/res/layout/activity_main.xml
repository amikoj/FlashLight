<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backaground"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_weight="2"
    tools:context="enjoytoday.com.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="20dip"
        android:orientation="vertical"
        android:layout_height="0dip">
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:text="20:05"
                android:id="@+id/timer"
                android:textSize="22sp"
                android:textColor="@color/timer_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


                <TextView
                    android:layout_marginTop="10dip"
                    android:layout_marginLeft="8dip"
                    android:text="@string/led_text"
                    android:visibility="gone"
                    android:textSize="20dip"
                    android:textColor="#ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <SeekBar
                    android:id="@+id/light_seek"
                    android:layout_marginTop="15dip"
                    android:max="255"
                    android:progress="60"
                    android:visibility="gone"
                    android:maxHeight="2dp"
                    android:minHeight="2dp"
                    android:progressDrawable="@drawable/layer_progress"
                    android:thumb="@drawable/shape_circle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            <TextView
                android:layout_marginTop="10dip"
                android:layout_marginLeft="8dip"
                android:text="@string/screen_light_text"
                android:textSize="20dip"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="4"
                android:layout_marginTop="15dip"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/red"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:src="@drawable/red"
                    android:onClick="click"
                    android:layout_height="match_parent" />


                <ImageView
                    android:id="@+id/blue"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:src="@drawable/blue"
                    android:onClick="click"
                    android:layout_height="match_parent" />




                <ImageView
                    android:id="@+id/green"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:src="@drawable/green"
                    android:onClick="click"
                    android:layout_height="match_parent" />


                <ImageView
                    android:id="@+id/white"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:src="@drawable/white"
                    android:onClick="click"
                    android:layout_height="match_parent" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="25dip"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_height="0dip">

        <ImageView
            android:id="@+id/lamb"
            android:background="@drawable/lamb_background"
            android:layout_width="20dip"
            android:layout_height="20dip" />

        <ImageView
            android:layout_marginTop="15dip"
            android:id="@+id/switcher"
            android:background="@drawable/power_selector"
            android:src="@drawable/power"
            android:onClick="click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

</LinearLayout>
